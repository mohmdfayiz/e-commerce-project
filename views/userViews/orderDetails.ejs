<body>

    <style>
        html {
            overflow-x: hidden;
        }

        th {
            text-align: center;
        }
    </style>

    <section class="container mt-5">
        <div id="invoice" class="border py-5 px-4">
            <div class="row">
                <div class="col-6 d-flex align-items-center">
                    <img src="/public/admin/img/favicon/favicon.ico" width="40px" alt="">
                    <h2><strong>ride.</strong></h4>
                </div>
            </div>
            <div class="row mt-3">
                <div class="row">
                    <div class="col box p-4">
                        <table class="table table-borderless text-center">
                            <tr>
                                <th>No.</th>
                                <th>Product Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                            <% order.products.forEach(function(product,index){ %>
                                <tr>
                                    <td>
                                        <%= index+1 %>
                                    </td>
                                    <td>
                                        <%= product.productId.productName%>
                                    </td>
                                    <td>
                                        <%= product.quantity %>
                                    </td>
                                    <td>
                                        <%= product.productId.price %>
                                    </td>
                                    <td>
                                        <%= product.total %>
                                    </td>
                                </tr>
                                <% }) %>
                        </table>
                        <hr>
                    </div>
                </div>
            </div>
            <div class="row d-flex justify-content-end mb-5">
                <div class="col-2">
                    <span> Sub Total </span><br>
                    <span> Discount </span><br>
                    <strong> Grand Total </strong>
                </div>
                <div class="col-2">
                    <span>₹ <%=order.subTotal%></span><br>
                    <span>₹ <%=order.discount%></span><br>
                    <strong>₹ <%=order.grandTotal%></strong>
                </div>
            </div>

            <div class="row my-3 box">
                <div class="col-12 col-md-6 ">
                    <h5 class="pt-3 ps-2">Shipping Address</h5>
                    <div class="ps-2 pt-2">
                        <p>Full name: <%= order.address.fullName %>
                        </p>
                        <p>Phone no : <%= order.address.phoneNumber %>
                        </p>
                        <p>Address : <%= order.address.address %>, <%= order.address.city %>, <%= order.address.state %>
                                        -
                                        <%= order.address.pincode %>
                        </p>
                        <p>Type : <%= order.address.type %>
                        </p>
                    </div>
                </div>
                <div class="col-12 col-md-6 text-end ">
                    <h5 class="p-2 ">Other Details</h5>
                    <div class="pe-2">
                        <p>Order Id : <%= order._id%>
                        </p>
                        <p>Order date : <%= moment(order.date).format("LL") %>
                        </p>
                        <p>Payment Method : <%= order.paymentMethod %>
                        </p>
                        <p>Payment Status : <%= order.paymentStatus %>
                        </p>
                    </div>
                    </p>
                </div>
            </div>
        </div>
        <div class="row box mt-5 d-flex align-items-center justify-content-between ">
            <div class="col-6 p-3" id="orderStatus">
                <strong>Current order status :</strong> <span class="border">
                    <%= order.orderStatus %>
                </span>
                <% if(order.orderStatus !="Cancelled" && order.orderStatus !="Delivered" ){ %>
                    <div class="">
                        <button id="cancelBtn" class="btn btn-outline-danger m-2"
                            onclick="cancelOrder('<%= order._id %>')">Cancel
                            Order</button>
                    </div>
                    <% } %>
            </div>
            <div class="col-6 p-2 text-end">
                <button id="download-button" class="btn btn-outline-primary m-2">Download invoice</button>
            </div>
        </div>
    </section>

    <script>

        const button = document.getElementById('download-button');
        function generatePDF() {
            var opt = {
                margin: 0,
                filename: 'ride_invoice.pdf',
                image: { type: 'jpg', quality: 0.98 },
                html2canvas: { useCORS: true, scale: 3, y: 0, scrollY: 0 },
                jsPDF: { format: 'A4' },
            }
            // Choose the element that your content will be rendered to.
            const element = document.getElementById('invoice');
            // Choose the element and save the PDF for your user.
            html2pdf().from(element).save();
        }
        button.addEventListener('click', generatePDF);

        let status = document.getElementById("status").value
        function cancelOrder(orderId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Cancel order'
            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/cancelOrder/' + orderId,
                        method: 'post',
                        success: (response) => {
                            if (response) {
                                $("#orderStatus").load(" #orderStatus > *");
                                Swal.fire(
                                    'Cancelled!',
                                    'Your order has been cancelled.',
                                    'success'
                                )
                            }
                        }
                    })
                }
            })
        }

    </script>

