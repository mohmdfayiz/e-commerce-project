<%- include('../userHeader.ejs') -%>
  <!-- Navbar -->


  <!-- wishlist -->

  <div class="container m-t-50">
    <div class="row">
      <div class="col-10 m-lr-auto m-b-50 m-t-30">
        <div class="m-l-10 m-r--38 m-lr-0-xl">
          <div class="wrap-table-shopping-cart">
            <table class="table-shopping-cart">
              <tr class="table_head">
                <th></th>
                <th>Product</th>
                <th>Price</th>
                <th>Description</th>
                <th></th>
              </tr>
              <% list.forEach(function(product){ %>
                <tr class="table_row">
                  <td class="column-1">
                    <form action="/removeWishlistItem/<%=product._id%>" method="post">

                      <button type="submit">
                        <div class="how-itemcart1">
                        <img src="<%=product.imageUrl%>" alt="IMG" style="width: 60px;" />
                      </div>
                      </button>

                    </form>
                  </td>
                  <td>
                    <%=product.productName %>
                  </td>
                  <td>$ <%=product.price %>
                  </td>
                  <td>
                    <%=product.description %>
                  </td>
                  <td><button class="bg1 bor1 hov-btn1 stext-101 cl0 size-101">Add to cart</button></td>
                </tr>
                <% }) %>
            </table>
          </div>

        </div>
      </div>
    </div>
  </div>

  <%- include('../userFooter.ejs') -%>