<%- include('../userHeader.ejs') -%>
  <!-- Navbar -->

  <% if(list.length==0){ %>
    <div class="text-center" style="height: 80vh;"><div class="mt-md-5"></div>
      <img src="/public/images/empty.png" alt="empty-wishlist" class="mt-5">
    </div>
    <% }else{ %>
      <!-- wishlist -->

      <div class="container">
        <div class="row mt-5">
          <div class="col-10 m-lr-auto m-b-50 mt-5">
            <div class="m-l-10 m-r--38 m-lr-0-xl">
              <div class="wrap-table-shopping-cart mt-5 mb-5">
                <table class="table-shopping-cart" >
                  <tr class="table_head">
                    <th></th>
                    <th>Product</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th></th>
                  </tr>
                  <% list.forEach(function(product){ %>
                    <tr class="table_row">
                      <td class="column-1">
                        <form action="/removeWishlistItem/<%=product._id%>" method="post">

                          <button type="submit">
                            <div class="how-itemcart1">
                              <img src="<%=product.imageUrl%>" alt="IMG" style="width: 60px;" />
                            </div>
                          </button>

                        </form>
                      </td>
                      <td>
                        <%=product.productName %>
                      </td>
                      <td>
                        <%=product.description %>
                      </td>
                      <td>$ <%=product.price %></td>
                      <td>
                        <form action="/addToCart_wishlist/<%= product._id %>" method="post">
                          <button class="bg1 bor1 hov-btn1 stext-101 cl0 size-101" type="submit">Add to cart</button>
                        </form>
                      </td>
                    </tr>
                    <% }) %>
                </table>
              </div>

            </div>
          </div>
        </div>
      </div>
      <% } %>
        <%- include('../userFooter.ejs') -%>