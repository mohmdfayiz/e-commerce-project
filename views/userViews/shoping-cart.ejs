<%- include('../userHeader.ejs') -%>
  <!-- Navbar -->

  <% if(products.length==0){ %>
    <div class="d-flex justify-content-center align-items-center " style="height: 100vh;">
      <img src="/public/images/empty-cart-4085814-3385483.jpg" alt="empty-cart" style=" height:500px">
    </div>
    <% }else{ %>
      <!-- Shoping Cart -->

      <!-- breadcrumb -->
      <div class="m-t-70 d-none d-lg-block"></div>
      <div class="container ">
        <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
          <a href="/" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
          </a>

          <span class="stext-109 cl4">
            Shoping Cart
          </span>
        </div>
      </div>
      <div class="container bg0 p-t-20 p-b-85 ">
        <div class="row">
          <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
            <div class="m-l-25 m-r--38 m-lr-0-xl">
              <div class="wrap-table-shopping-cart">
                <table class="table-shopping-cart">
                  <tr class="table_head">
                    <th class="column-1">Product</th>
                    <th class="column-2"></th>
                    <th class="column-3">Price</th>
                    <th class="column-4">Quantity</th>
                    <th class="column-5">Total</th>
                  </tr>
                  <% products.forEach(function(product){ %>
                    <tr class="table_row">
                      <td class="column-1">
                        <form action="/removeCartItem/<%= product.total %>/<%= product.productId._id %>" method="POST">
                          <button type="submit" class="how-itemcart1">
                            <img src="<%=product.productId.imageUrl[0] %>" alt="IMG" style="width: 60px;" />
                          </button>
                        </form>
                      </td>
                      <td class="column-2">
                        <%= product.productId.productName %>
                      </td>
                      <td class="column-3" id="price">
                        <%= product.productId.price %>
                      </td>
                      <td class="column-4">
                        <div class="wrap-num-product flex-w m-l-auto m-r-0">
                          <form action="/decrementQuantity/<%= product.productId.price %>/<%=product.productId._id%>"
                            method="POST">
                            <button id="minusbtn" type="submit"
                              class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                              <i class="fs-16 zmdi zmdi-minus"></i>
                            </button>
                          </form>
                          <input class="mtext-104 cl3 txt-center num-product" type="number" id="quantity"
                            value="<%= product.quantity %>" readonly />
                          <form action="/incrementQuantity/<%= product.productId.price %>/<%=product.productId._id%>"
                            method="POST">
                            <button type="submit" class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                              <i class="fs-16 zmdi zmdi-plus"></i>
                            </button>
                          </form>
                        </div>
                      </td>
                      <td class="column-5" id="total">
                        <%= product.total %>
                      </td>
                    </tr>
                    <% }); %>
                </table>
              </div>
            </div>
          </div>
          <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
            <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
              <h4 class="mtext-109 cl2 p-b-30">Cart Total</h4>

              <div class="flex-w flex-t bor12 p-b-13">
                <div class="size-208">
                  <span class="stext-110 cl2"> Sub Total: </span>
                </div>

                <div class="size-209">
                  <span class="mtext-110 cl2">
                    <%= cart.cartTotal %>
                  </span>
                </div>
              </div>
              <div class="flex-w flex-t bor12 p-b-13">
                <div class="size-208">
                  <span class="stext-110 cl2"> Shipping: </span>
                </div>

                <div class="size-209">
                    <span class="mtext-110 cl2 text-success">
                      Free
                    </span>
                </div>
              </div>

              <div class="flex-w flex-t p-t-27 p-b-33">
                <div class="size-208">
                  <span class="mtext-101 cl2"> Total: </span>
                </div>

                <div class="size-209 p-t-1">
                  <span class="mtext-110 cl2">â‚¹ <%= cart.cartTotal %> </span>
                </div>
              </div>

              <a href="/checkout" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                Proceed to Checkout
              </a>
            </div>
          </div>
        </div>
      </div>
      <% } %>

        <script>
          let quantity = document.getElementById("quantity").value;
          if (quantity == 1) {
            document.getElementById("minusbtn").disabled = true
          } else {
            document.getElementById("minusbtn").disabled = false
          }
        </script>

        <%- include('../userFooter.ejs') -%>