  <!-- Product -->
  <section class="bg0 p-t-23 p-b-50">
    <div class="container">
      <div class="p-b-10">
        <h3 class="ltext-103 cl5">Bikes Overview</h3>
      </div>

      <div class="wrap-slick2" id="prdctCard">
        <div class="slick2">
          <% bikes.forEach(function(product){ %>
            <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15 <%= product.category.category %>">
              <!-- Block2 -->
              <div class="block2">
                <div class="block2-pic hov-img0 ">
                  <img src="<%= product.imageUrl[0]%>" alt="IMG-PRODUCT" class="prd_card">
                  <a href="/product_details/<%= product._id%>"
                    class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
                    Quick View
                  </a>
                </div>

                <div class="block2-txt flex-w flex-t p-t-14">
                  <div class="block2-txt-child1 flex-col-l">
                    <a href="/product_details/<%= product._id%>"
                      class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                      <%= product.productName %>
                    </a>

                    <span class="stext-105 cl3"> ₹ <%= product.price %> </span>
                  </div>

                  <div class="block2-txt-child2 flex-r p-t-3">
                    <% if(!login){ %>
                      <button onclick="addToWishlist('<%= product._id %>','<%= product.productName %>')">
                        <img class="icon-heart1 dis-block " src="/public/users/images/icons/icon-heart-01.png"
                          alt="ICON" />
                      </button>
                      <% } %>
                        <% if ( login ) { %>
                          <% let inWishlist=wishlistItems.some(item=> item._id.toString() === product._id.toString() )%>
                            <% if(inWishlist) { %>
                              <button onclick="removeFromWishlist('<%= product._id %>','<%= product.productName %>')">
                                <img class="icon-heart2 dis-block " src="/public/users/images/icons/icon-heart-02.png"
                                  alt="ICON">
                              </button>
                              <%}else{%>
                                <button onclick="addToWishlist('<%= product._id %>','<%= product.productName %>')">
                                  <img class="icon-heart1 dis-block " src="/public/users/images/icons/icon-heart-01.png"
                                    alt="ICON" />
                                </button>
                                <%}}%>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>
    </div>
  </section>

  <section class="bg0 p-b-100">
    <div class="container">
      <div class="p-b-10">
        <h3 class="ltext-103 cl5">Accessories & Gadgets</h3>
      </div>
      <div class="wrap-slick2">
        <div class="slick2">
          <% accessoriesNgadgets.forEach(function(product){ %>
            <div class="item-slick2 p-l-15 p-r-15 p-t-15 p-b-15 isotope-item <%= product.category.category %>">
              <!-- Block2 -->
              <div class="block2">
                <div class="block2-pic hov-img0">
                  <img src="<%= product.imageUrl[0]%>" alt="IMG-PRODUCT" class="prd_card_small"/>

                  <a href="/product_details/<%= product._id%>"
                    class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04 ">
                    Quick View
                  </a>
                </div>

                <div class="block2-txt flex-w flex-t p-t-14">
                  <div class="block2-txt-child1 flex-col-l">
                    <a href="product-detail.html" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                      <%= product.productName %>
                    </a>

                    <span class="stext-105 cl3"> ₹<%= product.price %> </span>
                  </div>
                  <div class="block2-txt-child2 flex-r p-t-3">
                    <% if(!login){ %>
                      <button onclick="addToWishlist('<%= product._id %>','<%= product.productName %>')">
                        <img class="icon-heart1 dis-block " src="/public/users/images/icons/icon-heart-01.png"
                          alt="ICON" />
                      </button>
                      <% } %>
                        <% if ( login ) { %>
                          <% let inWishlist=wishlistItems.some(item=> item._id.toString() === product._id.toString() )
                            %>
                            <% if(inWishlist) { %>
                              <button onclick="removeFromWishlist('<%= product._id %>','<%= product.productName %>')">
                                <img class="icon-heart2 dis-block " src="/public/users/images/icons/icon-heart-02.png"
                                  alt="ICON">
                              </button>
                              <%}else{%>
                                <button onclick="addToWishlist('<%= product._id %>','<%= product.productName %>')">
                                  <img class="icon-heart1 dis-block " src="/public/users/images/icons/icon-heart-01.png"
                                    alt="ICON" />
                                </button>
                                <%}}%>
                  </div>
                </div>
              </div>
            </div>
            <% }) %>
        </div>
      </div>

    </div>
  </section>

  <script>

    function reload() {
      location.reload()
    }

    function addToWishlist(productId, productName) {
      $.ajax({
        url: '/addToWishlist/' + productId,
        method: 'post',
        success: (response) => {
          if (response.status) {
            Swal.fire({
              icon: 'success',
              title: productName,
              text: ' Added to wishlist!',
              showConfirmButton: false,
            })
            setTimeout(reload, 150)
          } else {
            Swal.fire({
              icon: 'warning',
              title: 'Oops...',
              text: 'Please signin for add to wishlist!',
            })
          }
        }
      })
    }

    function removeFromWishlist(productId, productName) {
      $.ajax({
        url: '/removeWishlistItem/' + productId,
        method: 'post',
        success: (response) => {
          if (response.status) {
            Swal.fire({
              icon: 'success',
              title: productName,
              text: 'Removed from wishlist.',
              showConfirmButton: false,
            })
            setTimeout(reload, 150)
          }
        }
      })
    }

  </script>

