  <script>
    function addToWishlist(productId, productName) {
      $.ajax({
        url: '/addToWishlist/' + productId,
        method: 'post',
        success: (response) => {
          if (response.status) {
            Swal.fire({
              icon: 'success',
              title: productName,
              text: ' added to wishlist.',
              showConfirmButton: false,
              timer: 1500
            })
          } else {
            Swal.fire({
              icon: 'warning',
              title: 'Oops...',
              text: 'Please signin for add to wishlist!',
            })
          }
        }
      })
    }

  </script>

