<%- include('../layoutHeader.ejs') -%>

  <section style="background-color: #e7e0d8; height: 100vh;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
          <div class="card" style="border-radius: 1rem">
            <div class="row g-0">
              <div class="col-md-6 col-lg-5 d-none d-md-block">
                <img src="https://i.pinimg.com/474x/a8/28/46/a8284664adafdea91b25099bc9737f80.jpg" alt="login form"
                  class="img-fluid" style="border-radius: 1rem 0 0 1rem" />
              </div>
              <div class="col-md-6 col-lg-7 d-flex align-items-center">
                <div class="card-body p-4 p-lg-5 text-black">
                  <form action="/signup" method="post">
                    <div class="d-flex align-items-center mb-3 pb-1">
                      <span class="h2 fw-bold mb-0">Sign up</span>
                    </div>

                    <div class="form-outline mb-4">
                      <input type="text" name="userName" id="form2Example27" class="form-control form-control-lg"
                        required pattern="[A-Z a-z.]{3,20}" />
                      <label class="form-label" for="form2Example27">User name</label>
                    </div>

                    <div class="form-outline mb-4">
                      <input type="email" name="email" id="form2Example17" class="form-control form-control-lg" required
                        pattern="^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$" />
                      <label class="form-label" for="form2Example17">Email address</label>
                      <% if(emailExist){ %>
                        <p style="color: red;">Email already exist.</p>
                        <% } %>
                    </div>

                    <div class="form-outline mb-4">
                      <input type="password" name="password" id="form2Example27" class="form-control form-control-lg"
                        required minlength="6" />
                      <label class="form-label" for="form2Example27">Password</label>
                    </div>

                    <div class="pt-1 mb-4">
                      <button class="btn btn-dark btn-lg btn-block" type="submit">Sign up</button>
                    </div>
                    <a href="#!" class="small text-muted">Terms of use.</a>
                    <a href="#!" class="small text-muted">Privacy policy</a>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include('../layoutFooter.ejs') -%>