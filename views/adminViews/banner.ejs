<%- include('../layoutHeader.ejs') -%>
<!-- Layout wrapper -->
<div class="layout-wrapper layout-content-navbar">
  <div class="layout-container">
    <!-- Menu -->
    <%- include("./menu.ejs") -%>
    <!-- / Menu -->

    <!-- Layout container -->
    <div class="layout-page">
      <!-- Navbar -->
      <%- include('./navbar.ejs') -%>
      <!-- / Navbar -->

      <!-- Hoverable Table rows -->

      <div class="text-end">
        <a href="addBanner"><button class="btn btn-success mt-3 mx-4" style="width: 150px" type="submit">
            Add new
          </button>
        </a>
      </div>

      <div class="card mt-2 mx-4">
        <h5 class="card-header">Banners.</h5>
        <div class="table-responsive text-nowrap">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Banner Image</th>
                <th>Name</th>
                <th>Sub Title</th>
                <th>Title</th>
                <th class="text-center">Actions</th>
              </tr>
            </thead>
            <tbody class="table-border-bottom-0">
            <% banners.forEach(function(x){ %>
              <tr>
                <td><img src="/public/images/<%= x.imageUrl %>" width="100" alt="BannerImg"></td>
                <td><%= x.bannerName %> </td>
                <td><%= x.subTitle %></td>
                <td><%= x.title %> </td>
                <td>
                    <div class="dropdown">
                        <div class="text-center">
                          <a class="dropdown-item" href="/admin/editBanner?id=<%= x._id %>"><i
                              class="bx bx-edit-alt me-1"></i> Edit</a>
                          <form action="/admin/banners?id=<%= x._id %>" method="post">
                            <button class="btn dropdown-item" type="submit"
                              onclick="return confirm('Are you sure')"><i class="bx bx-trash me-1"></i>Delete</button>
                          </form>
                        </div>
                      </div>
                </td>
              </tr>
              <% }) %> 
            </tbody>
          </table>
        </div>
      </div>
      <!--/ Hoverable Table rows -->

      <div class="content-backdrop fade"></div>
    </div>
    <!-- / Layout page -->
  </div>

  <!-- Overlay -->
  <div class="layout-overlay layout-menu-toggle"></div>
</div>
<!-- / Layout wrapper -->

<%- include('../layoutFooter.ejs') -%>
